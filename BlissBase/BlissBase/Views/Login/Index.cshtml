
@{
    ViewBag.Title = @Html.Localize("logIn").ToString();
}

<div class="container body-content">
    <h2 class="page-header">@Html.Localize("logIn")</h2>

    <div>
        @using (Html.BeginForm())
        {
            <label>@Html.Localize("userName") </label>
                <input class="form-control" type="text" name="username" placeholder="@Html.Localize("userNameMsg").ToString()" />

            <label>@Html.Localize("userPasswd") </label>
                <input class="form-control" type="password" name="password" placeholder="@Html.Localize("userPasswordMsg").ToString()" />

    <input class="btn btn-info" type="submit" name="submit" value="@Html.Localize("logIn").ToString()" />
        }
    </div>
</div>
